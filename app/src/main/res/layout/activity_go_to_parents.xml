<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GoToParents">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:layout_gravity="center"
        android:src="@drawable/parents" />

    <EditText
        android:id="@+id/nameParents"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/customedt"
        android:hint="Enter the name"
        android:inputType="textPersonName"
        android:padding="@dimen/_8sdp"
        android:textColorHint="#676565"
        android:textSize="@dimen/_15sdp" />

    <EditText
        android:id="@+id/ageParents"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/customedt"
        android:hint="Enter the age"
        android:inputType="number"
        android:padding="@dimen/_8sdp"
        android:textColorHint="#676565"
        android:textSize="@dimen/_15sdp" />
    <EditText
        android:id="@+id/phoneParent"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/customedt"
        android:hint="Enter the phone Number"
        android:inputType="number"
        android:padding="@dimen/_8sdp"
        android:textColorHint="#676565"
        android:textSize="@dimen/_15sdp" />

    <EditText
        android:id="@+id/addressParents"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/customedt"
        android:hint="Enter the address"
        android:inputType="text"
        android:padding="@dimen/_8sdp"
        android:textColorHint="#676565"
        android:textSize="@dimen/_15sdp" />

    <LinearLayout
        android:layout_width="@dimen/_300sdp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/photoParents"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="48dp"
            android:text="pp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_weight="0.5"
            android:background="@drawable/customedt"
            android:hint="Upload the picture of the child "
            android:inputType="text"
            android:padding="@dimen/_8sdp"
            android:textColorHint="#676565"
            android:textSize="@dimen/_15sdp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/uploadParents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_8sdp"
            android:background="@drawable/btn_green"
            android:text="Choose"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />
    </LinearLayout>

    <EditText
        android:id="@+id/genderParents"
        android:layout_width="381dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/customedt"
        android:hint="gender of the child.."
        android:inputType="text"
        android:padding="@dimen/_8sdp"
        android:textColorHint="#676565"
        android:textSize="@dimen/_15sdp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/savedata"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_18sdp"
        android:background="@drawable/loginbtn"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        />

</LinearLayout>
</ScrollView>