<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_140sdp"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:background="@drawable/radiosrecycler">



    <ImageView
        android:id="@+id/photoDonation"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center"
        android:src="@drawable/home"
        android:layout_marginTop="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/nameDonation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_10sdp"
        android:text="Noor Al Amal House for Orphan Care"
        android:textColor="#2B2B2B"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detailsDonation"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_10sdp"
        android:text="This home has helped many children and the elderly, but now we need help to finish what we started."
        android:layout_marginStart="@dimen/_5sdp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp">

    <TextView
        android:id="@+id/dateDonation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="3/10/2022" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDonation"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_20sdp"
        android:background="@drawable/loginbtn"
        android:text="donate now"
        android:layout_marginStart="@dimen/_120sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_8sdp" />
    </LinearLayout>

</LinearLayout>