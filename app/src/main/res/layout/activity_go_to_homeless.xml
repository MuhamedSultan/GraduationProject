<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GoToHomeless">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:layout_gravity="center"
        android:src="@drawable/homeless"
        />

    <EditText
        android:id="@+id/nameHomeless"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/customedt"
        android:hint="Enter the name"
        android:inputType="textPersonName"
        android:padding="@dimen/_8sdp"
        android:textColorHint="#676565"
        android:textSize="@dimen/_15sdp"
        />

    <EditText
        android:id="@+id/ageHomeless"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/customedt"
        android:hint="Enter the age"
        android:inputType="number"
        android:padding="@dimen/_8sdp"
        android:textColorHint="#676565"
        android:textSize="@dimen/_15sdp"
        />

    <EditText
        android:id="@+id/addressHomeless"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/customedt"
        android:hint="Enter the address"
        android:inputType="text"
        android:padding="@dimen/_8sdp"
        android:textColorHint="#676565"
        android:textSize="@dimen/_15sdp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/photoHomeless"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_weight="0.5"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/customedt"
            android:hint="Upload the picture of the child "
            android:inputType="text"
            android:padding="@dimen/_8sdp"
            android:textColorHint="#676565"
            android:textSize="@dimen/_15sdp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/uploadHomeless"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_weight="0.5"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_10sdp"

            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/btn_green"
            android:text="Upload"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/detailsHomeless"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/customedt"
        android:hint="details of the child.."
        android:inputType="text"
        android:padding="@dimen/_8sdp"
        android:textColorHint="#676565"
        android:textSize="@dimen/_15sdp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saveHomeless"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/loginbtn"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        />

</LinearLayout>
